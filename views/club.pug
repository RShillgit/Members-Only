extends layout

block content
    div(class='page-header')
        h1 The Secret Club 

    form(method='POST' action='' id='club-form')
        p Hint: The password is "notsecret"
        label Secret Password 
            input(type='password' name='password' required='true')
        button Join Club

    if err
        div(class='error-message-div')
            ul
                each e in err 
                    li=e.msg  