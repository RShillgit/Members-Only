extends layout

block content
    div(class='page-header')
        h1 The Secret Club 

    div(class='container')
        form(method='POST' action='' id='club-form')
            p Hint: The password is "notsecret"
            label Secret Password 
                input(type='password' name='password' required='true')
            
        div(class='form-buttons')
            a(href='/home')
                button Cancel
            button(type='submit' form='club-form') Join Club

        if err
            div(class='error-message-div')
                ul
                    each e in err 
                        li=e.msg 
                    