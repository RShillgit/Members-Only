extends layout

block content
    div(class='page-header')
        h1= title

    div(class='nav') 

        a(href='/club')
            if !membership
                button Join Secret Club 
            if membership   
                button Secret Club
        
        if !admin
            a(href='/admin')
                button Become Admin
    
        a(href='/message/create')
            button Create Message
        a(href='/logout') 
            button Logout

    if messages 
    div(class='messagesContainer')
        each message in messages   
            div(class='individualMessage')
                if admin 
                    div(class='adminOptions')
                        a(href=`/message/${message._id}/delete`)
                            button X
                div(class='messageInfo')
                    p #{message.author.first_name} #{message.author.last_name}
                    p=message.title
                    p=message.text
                div(class='messageDate')
                    p= message.formatDate(message.timestamp)
    