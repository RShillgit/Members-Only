extends layout

block content
    div(class='page-header')
        h1 The Not-So-Secret Secret Club 

    div(class='container')
        a(href='/home')
            button Home

        h1 This club is pretty useless, but welcome!

        div(class='welcomeToClubVideo')
            img(class='clubGif' src="/images/outWest.gif" alt="Welcome")

        if err
            div(class='error-message-div')
                ul
                    each e in err 
                        li=e.msg  