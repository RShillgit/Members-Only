extends layout

block content
    div(class='page-header')
        h1 The Not-So-Secret Secret Club 

    div(class='container')
        a(href='/home')
            button Home

        h1 This club is pretty useless, but welcome!

        div(class='welcomeToClubVideo')
            img(class='clubGif' src="/images/wave.gif" alt="Welcome")

        div(class='gifLink')
            a(href="https://tenor.com/view/forest-gump-wave-hi-hello-howdy-gif-22164679" target='_blank') Gif from Tenor

        if err
            div(class='error-message-div')
                ul
                    each e in err 
                        li=e.msg  